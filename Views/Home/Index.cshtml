<div class="container">
    <h1>Create Tweet</h1>
        <form action="@Url.Action("Create", "Home")" method="post">
        <label asp-for="NewTweet.Username" for="username">Username: </label>
        <input asp-for="NewTweet.Username" type="text" id="username" name="username" required><br><br>
        
        <label asp-for="NewTweet.TweetContent" for="tweet">Tweet: </label>
        <textarea asp-for="NewTweet.TweetContent" id="tweet" name="tweet" rows="4" cols="50" maxlength="280" required></textarea><br><br>
        
        <button type="submit" class="btn btn-primary">Post Tweet</button>
        </form>
</div>

<div class="container">
    <h1>Recent Tweets</h1>
    <ul>
        @foreach (var tweet in Model.Tweets)
        {
            <li>@tweet.Username: @tweet.TweetContent - @tweet.CreatedAt</li>
        }
    </ul>
</div>

