@using TwitterClone.Models
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Twitter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tt.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tweetView.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome-4.7.0/css/font-awesome.min.css" asp-append-version="true" />

    <style>
        .col-md-3, .col-md-6 {
            border-left: 1px solid #e1e4e8;
            border-right: 1px solid #e1e4e8;
        }

        .search-form {
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 25px;
        outline: none;
    }

    .search-input:focus {
        border-color: #1da1f2;
    }

    /* Optional: Add a search icon inside the search input */
    .search-form:before {
        content: "\1F50D";  /* Unicode search icon */
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 16px;
        color: #ccc;
    }

    .overflow-y-auto {
        overflow-y: auto;
        height: 100vh;
        padding : 0px;
    }

    </style>
</head>

@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Sidebar -->
            <aside class="col-md-3">
                <partial name="_LoginPartial" />
                <div class="d-flex flex-column align-items-start py-3">
                    <div class="mb-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
                    </div>
                    <div class="mb-3">
                        <a asp-controller="Home" asp-action="Popular" class="btn btn-primary">Popular</a>
                    </div>
                    <div class="mb-3">
                        <a id="notificationCount" asp-controller="Home" asp-action="ShowNotifications" class="btn btn-primary">Notifications</a>
                    </div>
                    <div class="mb-3">
                        <a asp-controller="Chat" asp-action="Index" class="btn btn-primary">Messages</a>
                    </div>
                    <div class="mb-3">
                        <a asp-controller="User" asp-action="ShowBookmarks" class="btn btn-primary">Bookmarks</a>
                    </div>
                </div>
            </aside>


            <!-- Main Content -->
            <main role="main" class="col-md-6 pb-3 overflow-y-auto  ">
                @RenderBody()
            </main>

            <!-- Right Sidebar -->
            <aside class="col-md-3">
                <div class="d-flex flex-column align-items-start py-3">
                    @* <form asp-action="Search" asp-controller="Home" method="get">
                        <input type="text" name="searchQuery" placeholder="Search tweets">
                        <button type="submit">Search</button>
                    </form> *@
                    <form asp-action="Search" asp-controller="Home" method="get" class="search-form">
                        <input type="text" name="searchQuery" class="search-input" placeholder="Search tweets">
                    </form>

                    <h5>Trending</h5>
                    <ul id="trendingTopicsList">
                        <!-- Trending topics will be populated here -->
                        @* <li>#Topic1</li>
                        <li>#Topic2</li>
                        <li>#Topic3</li> *@
                    </ul>
                    <h5 class="mt-3">Who to follow</h5>
                    <ul ul id="toFollow">
                        @* <li>User1</li>
                        <li>User2</li>
                        <li>User3</li> *@
                    </ul>
                </div>
            </aside>

        </div>
    </div>

     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.9/signalr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



