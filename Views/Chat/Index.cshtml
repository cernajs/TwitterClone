@model IEnumerable<ChatViewModel>

<style>
    #allChats {
        cursor: pointer;
        width: 100%;
        max-width: 600px;
        margin: auto;
    }

    .mostRecentMessage {
        font-size: smaller;
        color: grey;
        margin-top: 5px;
        margin-bottom: 5px;
    }

    .chat {
        border: 1px solid #e1e8ed;
        border-radius: 10px;
        padding: 10px;
        margin: 10px 0;
        display: flex;
        flex-direction: column;
    }

</style>

@if(Model.Count() == 0)
{
    <div class="alert alert-info">
        You have no chats yet. Start a chat with someone!
    </div>
}

<div id="allChats">
    @foreach(var chat in Model)
    {
         @* <a asp-controller="Chat" asp-action="ChatWithSpecificUser" asp-route-id="@chat.ChatId" class="action-btn"> *@
        <div class="chat" data-tweet-id="@chat.ChatId">
            Chat with @chat.RecieventName
            <div class="mostRecentMessage">
                Most recent Message: @chat.MostRecentMessage?.Content
            </div>
        </div>
    }
</div>

