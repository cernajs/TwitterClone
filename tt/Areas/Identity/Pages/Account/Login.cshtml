@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

@if (ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ModelState.Root.Errors)
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card p-4" style="width: 400px;">
        <div class="card-body">
            <h1 class="card-title text-center mb-4" style="font-size: 24px;">@ViewData["Title"]</h1>
            <form id="account" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Log in</button>
                <div class="text-center mt-3">
                    <a asp-page="./ForgotPassword">Forgot your password?</a><br>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a><br>
                    <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
